<layout id="MainLayout">
    <drawable class="Background" />
    <label text="Loading..." x="center" y="center" justification="Graphics.TEXT_JUSTIFY_CENTER|Graphics.TEXT_JUSTIFY_VCENTER" />
    <drawable class="EnphaseGraph">
        <param name="locX">24</param>
        <param name="locY">50</param>
        <param name="height">140</param>
    </drawable>
    <label x="60" y="25" font="Graphics.FONT_TINY" justification="Graphics.TEXT_JUSTIFY_CENTER" text="Produced" />
    <label x="180" y="25" font="Graphics.FONT_TINY" justification="Graphics.TEXT_JUSTIFY_CENTER" text="Consumed" />

    <label id="TotalProduction" x="center" y="500" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_BLUE" />
    <label id="TotalConsumption" x="center" y="500" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_RED" />
    <label id="Net" x="center" y="500" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" />
</layout>